<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.android.news">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="com.example.android.news.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.example.android.news.listviews.NewsSports"
            android:label="@string/sports"
            android:parentActivityName="com.example.android.news.MainActivity"
            tools:targetApi="jelly_bean">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.news.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.android.news.listviews.NewsPolitic"
            android:label="@string/politics"
            android:parentActivityName="com.example.android.news.MainActivity"
            tools:targetApi="jelly_bean">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.news.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.android.news.listviews.NewsScience"
            android:label="@string/science"
            android:parentActivityName="com.example.android.news.MainActivity"
            tools:targetApi="jelly_bean">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.news.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.android.news.listviews.NewsOpinion"
            android:label="@string/opinion"
            android:parentActivityName="com.example.android.news.MainActivity"
            tools:targetApi="jelly_bean">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.news.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.android.news.listviews.NewsCulture"
            android:label="@string/culture"
            android:parentActivityName="com.example.android.news.MainActivity"
            tools:targetApi="jelly_bean">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.news.MainActivity"/>
        </activity>
        <activity
            android:name="com.example.android.news.listviews.NewsLifestyle"
            android:label="@string/lifestyle"
            android:parentActivityName="com.example.android.news.MainActivity"
            tools:targetApi="jelly_bean">
            <!-- Parent activity meta-data to support 4.0 and lower -->
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.android.news.MainActivity"/>
        </activity>
    </application>
</manifest>